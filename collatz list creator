def collatz(number):
  if number%2==0:
    x = (number // 2)
  else:
    x = 3*number +1
  return (x)

print ("How high do you want to go")
top = int(input())
clist =[]
for i in range (1, top+1):
    y = i
    count = 0
    while y > 1:
        y = collatz (y)
        count = count + 1
    clist = clist + [str(count)]
for j in range(len(clist)):
    print (str(j+1) + ": " + clist[j])
